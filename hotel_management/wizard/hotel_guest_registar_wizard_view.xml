<odoo>
    <!-- واجهة الويزارد -->
    <record id="hotel_registration_wizard_form" model="ir.ui.view">
        <field name="name">hotel.registration.wizard.form</field>
        <field name="model">hotel.registration.wizard</field>
        <field name="arch" type="xml">
             <form>
                <header>
                    <field name="stage" widget="statusbar" statusbar_visible="stage1,stage2"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>New Guest Registration</h1>
                    </div>

                    <group>

                        <group string="Personal Information" attrs="{'invisible': [('stage', '!=', 'stage1')]}">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="subscription_type"/>
                        </group>

                        <group string="Room Information" attrs="{'invisible': [('stage', '!=', 'stage2')]}">
                            <field name="room_id" domain="[('state', '=', 'ready')]"/>
                            <field name="check_in_date"/>
                            <field name="check_out_date"/>
                            <field name="note"/>
                        </group>

                    </group>
                </sheet>

                <footer>
                    <button name="action_next_stage" string="Next" type="object"
                            class="oe_highlight" attrs="{'invisible': [('stage','!=','stage1')]}"/>
                    <button name="action_submit_request" string="Submit Request" type="object"
                            class="oe_highlight" attrs="{'invisible': [('stage','!=','stage2')]}"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="action_hotel_registration_wizard" model="ir.actions.act_window">
        <field name="name">New Guest Registration</field>
        <field name="res_model">hotel.registration.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
<!--     <record id="action_new_booking" model="ir.actions.act_window">-->
<!--        <field name="name">Booking Action</field>-->
<!--        <field name="res_model">hotel.registration.wizard</field>-->
<!--    </record>-->
    <menuitem id="menu_new_registration" name="New Registration"
              parent="registration_menu" action="action_hotel_registration_wizard"
              sequence="10"/>

</odoo>