<odoo>
    <record id="view_booking_request_form" model="ir.ui.view">
        <field name="name">hotel.booking.request.form</field>
        <field name="model">hotel.registration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage" invisible="1"/>
                    <button name="action_next_stage" string="Next" type="object" class="oe_highlight" attrs="{'invisible': [('stage','!=','stage1')]}"/>
                    <button name="action_approve_request" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': [('stage','!=','stage2')]}"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </header>
                <sheet>
                    <div class="step" attrs="{'invisible': [('stage', '!=', 'stage1')]}">
                        <h2>Personal Info</h2>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="subscription_type"/>
                        </group>

                    </div>


                    <div class="step" attrs="{'invisible': [('stage', '!=', 'stage2')]}">
                        <h2>description</h2>
                        <group>
                            <field name="room_id"/>
                            <field name="check_in_date"/>
                            <field name="check_out_date"/>
                            <field name="note"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_new_booking" model="ir.actions.act_window">
        <field name="name">Booking Action</field>
        <field name="res_model">hotel.registration</field>
    </record>
    <menuitem id="menu_hotel_new_booking"
              name="New Booking"
              parent="registration_menu"
              action="action_new_booking"/>
</odoo>