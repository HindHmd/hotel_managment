<odoo>
   <record id="rooms_view_tree" model="ir.ui.view">
           <field name="name">rooms tree</field>
           <field name="model">rooms</field>
           <field name="arch" type="xml">
                    <tree>
                        <field name="name"/>
                        <field name="ref" />
                        <field name="floor" />
                        <field name="rental_count" />

                    </tree>
           </field>
       </record>

    <record id="rooms_view_form" model="ir.ui.view">
        <field name="name">rooms form</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" />
                        </h1>
                        <h2><field name="ref" /></h2>
                    </div>
                    <group >
                        <field name="floor" />
                        <field name="guests_ids" />
                    </group>
                    <group>
                         <field name="available_rooms" />
                        <field name="occupied_rooms" />
                    </group>

                </sheet>
            </form>
        </field>
    </record>



    <record id="rooms_action" model="ir.actions.act_window">
               <field name="name">rooms action</field>
               <field name="res_model">rooms</field>
    </record>
    <menuitem id="room_menu_item"
              name="Rooms"
              parent="configration_menu"
              action="rooms_action"/>
</odoo>